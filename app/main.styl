@import("ace-css/css/ace")
@import("./assets/css/tooltip.styl")

$black-50 = rgba(black, .03)
$black-100 = rgba(black, .1)
$black-200 = rgba(black, .2)
$black-300 = rgba(black, .2)
$black-400 = rgba(black, .4)
$blue-primary = rgb(69, 192, 245)
$blue-shadow = rgb(90, 100, 110)
$green-primary = rgb(19, 183, 175)
$red-primary = rgb(255, 80, 70)
$yellow-primary = rgb(255, 190, 0)

body
  font-family BlinkMacSystemFont, -apple-system, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size 14px
  background-color #fafafb
input
  outline none

// Helpers

.btn-primary
  background-color $blue-primary
.thin
  font-weight 200
.bg-mask
  background-color $black-400
.bg-gray, .h-bg-gray:hover
  background-color $black-100
.bg-silver, .h-bg-silver:hover
  background-color $black-50
.bg-blue
  background-color $blue-primary
.bg-blue-grad
  background linear-gradient(90deg, $blue-primary 0, darken($blue-primary, 20))
.bg-green
  background-color $green-primary
.bg-red
  background-color $red-primary
.bg-yellow
  background-color $yellow-primary
.blue
  color $blue-primary
.border-top-silver
  border-top-color $black-50
.border-top-grey
  border-top solid $black-100
.rounded-bookend:first-child
  border-radius 3px 0 0 3px
.rounded-bookend:last-child
  border-radius: 0 3px 3px 0
.border2
  border-width 2px
.border4
  border-width 4px
.round50
  border-radius 50px
.shadow0
  box-shadow 0 0 2px 0 $black-300
.shadow1
  box-shadow 0 4px 6px 0 $black-200
.shadow2
  box-shadow 2px 10px 16px 1px $black-200
.op0
  opacity 0
.l50
  left 50%
.h100
  height 100%
.w50
  width 50%
.w100
  width 100%
.avatar
  max-width 90px
  max-height 90px
.y1
  height 1em
.y2
  height 2em
.x1
  width 1em
.x2
  width 2em
.x4
  width 4em
.x500
  width 500px
.py15
  padding-top: 0.75rem
  padding-bottom: 0.75rem
.p2x
  padding 2px
.p4x
  padding 4px
.p6x
  padding 6px
.m3n
  margin 0 -2rem
.mb4n
  margin-bottom -4rem
.m-auto
  margin auto
.h7
  font-size .7rem
.upcase
  text-transform uppercase
.transition
  transition all .25s ease
.bounce
  transition transform .3s cubic-bezier(0.175, 0.885, 0.32, 1.275)
.scale0 > div
  transform scale(0.1)
.blur
  filter blur(4px)
.pointer
  cursor pointer
.noclick
  pointer-events none
.fill
  top 0
  bottom 0
  left 0
  right 0
.spin
  animation spin 1s infinite linear
  @keyframes spin
    100%
      transform rotate(360deg)
input:valid ~ .nudge
input:focus ~ .nudge
.nudge.active
  transform translate(-12%, -50%) scale(0.75)
.input-line
  background linear-gradient($blue-primary, $blue-primary) center bottom/0 2px no-repeat,
    linear-gradient($black-400, $black-400) center bottom/100% 1px no-repeat
  &:focus:not(:disabled)
  &:hover:not(:disabled)
  &.active
    background-size 100% 2px, 100% 1px
  &:disabled
    background none
    border-bottom dotted 1px $black-400
  &.error
    background-image linear-gradient($red-primary, $red-primary),
      linear-gradient($black-400, $black-400)

@media (min-width: 40em)
  .gutters > *:not(:last-child)
    padding-right 1rem
  .sm-border-left
    border-left solid 1px
