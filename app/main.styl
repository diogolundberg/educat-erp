@import("ace-css/css/ace")
@import("https://fonts.googleapis.com/css?family=Open+Sans")

$black-100 = rgba(black, .1)
$black-200 = rgba(black, .2)
$black-400 = rgba(black, .4)
$blue-primary = rgb(69, 192, 245)
$green-primary = rgb(19, 183, 175)

body
  font-family "Open Sans", "Helvetica", "Arial", sans-serif
  font-size 14px
input
  outline none
.bg-mask
  background-color $black-400
.bg-blue
  background-color $blue-primary
.bg-green
  background-color $green-primary
.round-50
  border-radius 50px
.upcase
  text-transform uppercase
.shadow
  box-shadow 0 2px 4px 0 $black-100
.shadow-2
  box-shadow 2px 2px 5px 1px $black-200
.raised
  box-shadow 0 0 2px 0 $black-100
.transition
  transition all .25s ease
.invisible
  opacity 0
.blur
  filter blur(4px)
.pointer
  cursor pointer
.transform0
  will-change transform
.slideup, .slideup-ch > div
  transform translateY(-200%)
.inset-bottom, .h-inset-bottom:hover
  box-shadow inset 0 -2px 0 0 $blue-primary
.inset-left, .h-inset-left:hover
  box-shadow inset 2px 0 0 0 $blue-primary
.left-50
  left 50%
.height-100
  height 100%
.h275
  line-height 2.5rem
.fill
  top 0
  bottom 0
  left 0
  right 0
.spin
  animation spin 1s infinite linear
  @keyframes spin
    100%
      transform rotate(360deg)
input:valid ~ .nudge, input:focus ~ .nudge, .nudge.active
  transform translate(-12%, -50%) scale(0.75)
.input-line
  background linear-gradient($blue-primary, $blue-primary) center bottom/0 2px no-repeat,
    linear-gradient($black-200, $black-200) center bottom/100% 1px no-repeat
  &:focus, &:hover, &.active
    background-size 100% 2px, 100% 1px

// Shame

.btn-primary
  background-color $blue-primary
  &:hover
    background-color darken($blue-primary, 20)
.spinner
  margin auto
  width 2rem
  height 2rem
  border 0.25rem solid $black-100
  border-top-color $black-400
.toggle
  width 4em
  height 2em
  padding 2px
