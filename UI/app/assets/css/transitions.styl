.slide-right-enter-active
.slide-left-enter-active
  transition all .3s ease
  position relative
.slide-right-leave-active
.slide-left-leave-active
  transition all .1s ease
  position absolute
  width 100%
.slide-right-leave-to
.slide-left-leave-to
.slide-right-enter
.slide-left-enter
  opacity 0
.slide-right-enter
  transform translateX(50%)
.slide-left-enter
  transform translateX(-50%)
